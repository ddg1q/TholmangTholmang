<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Step02_ServletAPI</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginCheck</servlet-name>
    <servlet-class>step01.controller.LoginCheck</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCheck</servlet-name>
    <url-pattern>/check</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Success</servlet-name>
    <servlet-class>step01.view.Success</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Success</servlet-name>
    <url-pattern>/succ</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Fail</servlet-name>
    <servlet-class>step01.view.Fail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Fail</servlet-name>
    <url-pattern>/fa</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletAPI</servlet-name>
    <servlet-class>step02.ServletAPI</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAPI</servlet-name>
    <url-pattern>/ServletAPI</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>step02.ServletAPI2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/api2</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>util.DataPublic</listener-class>
  </listener>
</web-app>